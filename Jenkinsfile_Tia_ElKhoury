pipeline {
  agent any
  environment { VENV = 'venv' }

  stages {
    stage('Setup') {
      steps {
        powershell '''
          if (!(Test-Path "$env:VENV")) {
            if (Get-Command py -ErrorAction SilentlyContinue) {
              py -3 -m venv "$env:VENV"
            } else {
              python -m venv "$env:VENV"
            }
          }

          $py = Join-Path "$env:VENV" "Scripts/python.exe"
          & "$py" -m pip install --upgrade pip
          & "$py" -m pip install -r requirements.txt
        '''
      }
    }

    stage('Lint') {
      steps {
        powershell '''
          $py = Join-Path "$env:VENV" "Scripts/python.exe"
          & "$py" -m flake8 app.py
        '''
      }
    }

    stage('Test') {
      steps {
        powershell '''
          $py = Join-Path "$env:VENV" "Scripts/python.exe"
          & "$py" -m pytest -q
        '''
      }
    }

    stage('Coverage') {
      steps {
        powershell '''
          $venvPy = Join-Path "$env:VENV" "Scripts/python.exe"
          # run tests with coverage
          & "$venvPy" -m coverage run -m pytest
          # create HTML and XML reports
          & "$venvPy" -m coverage html
          & "$venvPy" -m coverage xml
        '''
        archiveArtifacts artifacts: 'htmlcov/**, coverage.xml', fingerprint: true
      }
    }

    stage('Security Scan') {
      steps {
        powershell '''
          $venvPy = Join-Path "$env:VENV" "Scripts/python.exe"
          & "$venvPy" -m bandit -r . -x venv,tests,.git -q -f txt -o bandit-report.txt --exit-zero
        '''
        archiveArtifacts artifacts: 'bandit-report.txt', fingerprint: true
      }
    }


    stage('Deploy') {
      steps {
        echo 'Deploy placeholder'
      }
    }
  }

  post {
    always {
      cleanWs()
    }
  }
}
