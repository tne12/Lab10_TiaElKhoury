pipeline {
  agent any
  environment {
    VENV = 'venv'
  }

    stage('Setup') {
    steps {
        powershell """
        # Make venv with Windows Python launcher if available, else use full path
        if (!(Test-Path venv)) {
            if (Get-Command py -ErrorAction SilentlyContinue) {
            py -3 -m venv venv
            } else {
            & 'C:\\Users\\User\\AppData\\Local\\Programs\\Python\\Python311\\python.exe' -m venv venv
            }
        }
        & venv\\Scripts\\Activate.ps1
        pip install --upgrade pip
        pip install -r requirements.txt
        """
    }
    }


    stage('Lint') {
      steps {
        powershell """
          & ${VENV}\\Scripts\\Activate.ps1
          flake8 app.py
        """
      }
    }

    stage('Test') {
      steps {
        powershell """
          & ${VENV}\\Scripts\\Activate.ps1
          pytest -q
        """
      }
    }

    stage('Deploy') {
      steps { echo 'Deploy placeholder (OK to keep simple for the lab).' }
    }
  }

  post {
    always { cleanWs() }
    
  }
}
